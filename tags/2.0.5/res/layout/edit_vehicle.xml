<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
	>
		<LinearLayout
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_width="fill_parent"
		>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			>
				<EditText
					android:id="@+id/vehicle_year"
					android:layout_width="0dip"
			   		android:layout_weight="1"
					android:layout_height="wrap_content"
					android:hint="@string/vehicle_year"
					android:inputType="number"
				/>
				<EditText
					android:id="@+id/vehicle_make"
					android:layout_width="0dip"
			   		android:layout_weight="1"
					android:layout_height="wrap_content"
					android:hint="@string/vehicle_make"
					android:capitalize="words"
				/>
			</LinearLayout>
			<EditText
				android:id="@+id/vehicle_model"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="@string/vehicle_model"
				android:capitalize="words"
			/>
			<EditText
				android:id="@+id/vehicle_title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:hint="@string/vehicle_title"
				android:capitalize="sentences"
			/>
			<CheckBox
				android:id="@+id/vehicle_default"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/make_default"
			/>
		</LinearLayout>
	</ScrollView>
	<Button
		android:id="@+id/vehicle_save_btn"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/vehicle_save"
	/>
</LinearLayout>